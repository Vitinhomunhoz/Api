{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Produtos - Loja de Departamentos Franca",
    "description": "API para gerenciamento completo de produtos. Permite operações CRUD (Create, Read, Update, Delete) com MongoDB.",
    "version": "1.0.0",
    "contact": {
      "name": "Desenvolvedor Back-End",
      "email": "dev@loja-franca.com"
    }
  },
  "servers": [
    {
      "url": "https://seu-link-deploy.onrender.com",
      "description": "Servidor de Produção"
    },
    {
      "url": "http://localhost:3000",
      "description": "Servidor Local"
    }
  ],
  "paths": {
    "/api/produtos": {
      "get": {
        "summary": "Listar todos os produtos",
        "description": "Retorna uma lista com todos os produtos cadastrados na loja. Suporta paginação, filtro por tipo e ordenação.",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Número da página para paginação.",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "example": 1
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Número de itens por página.",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "example": 10
          },
          {
            "name": "tipo",
            "in": "query",
            "required": false,
            "description": "Filtrar produtos por tipo (case-insensitive, regex).",
            "schema": {
              "type": "string"
            },
            "example": "eletrônicos"
          },
          {
            "name": "ordenar",
            "in": "query",
            "required": false,
            "description": "Critério de ordenação da lista de produtos. Valores possíveis: 'preco_asc', 'preco_desc', 'nome'. Padrão: 'dataCadastro' decrescente.",
            "schema": {
              "type": "string",
              "enum": ["preco_asc", "preco_desc", "nome"]
            },
            "example": "preco_asc"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de produtos retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Produtos listados com sucesso"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Produto"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "currentPage": { "type": "integer", "example": 1 },
                        "totalPages": { "type": "integer", "example": 2 },
                        "totalItems": { "type": "integer", "example": 15 },
                        "itemsPerPage": { "type": "integer", "example": 10 }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "post": {
        "summary": "Cadastrar novo produto",
        "description": "Cria um novo produto no sistema. O nome do produto deve ser único (case-insensitive).",
        "tags": ["Produtos"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoInput"
              },
              "example": {
                "nome": "Smartwatch Samsung Galaxy Watch 6",
                "descricao": "Smartwatch com monitor de batimentos cardíacos e GPS",
                "cor": "Preto",
                "peso": 50,
                "tipo": "Wearables",
                "preco": 899.99
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Já existe um produto com esse nome ou dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/produtos/{id}": {
      "get": {
        "summary": "Buscar produto por ID",
        "description": "Retorna um produto específico pelo seu ID.",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID único do produto.",
            "schema": {
              "type": "string"
            },
            "example": "64a7b8c9d1e2f3a4b5c6d7e8"
          }
        ],
        "responses": {
          "200": {
            "description": "Produto encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "ID inválido.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "put": {
        "summary": "Atualizar produto existente",
        "description": "Atualiza os dados de um produto existente. O nome do produto, se alterado, deve ser único.",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID único do produto.",
            "schema": {
              "type": "string"
            },
            "example": "64a7b8c9d1e2f3a4b5c6d7e8"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProdutoUpdate"
              },
              "example": {
                "nome": "Smartwatch Samsung Galaxy Watch 6 Pro",
                "preco": 999.99
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "ID inválido, nome duplicado ou dados inválidos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      },
      "delete": {
        "summary": "Deletar produto",
        "description": "Remove um produto do sistema pelo seu ID.",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID único do produto.",
            "schema": {
              "type": "string"
            },
            "example": "64a7b8c9d1e2f3a4b5c6d7e8"
          }
        ],
        "responses": {
          "200": {
            "description": "Produto deletado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "ID inválido.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    },
    "/api/produtos/nome/{nome}": {
      "get": {
        "summary": "Buscar produto por nome",
        "description": "Busca produtos que contenham o nome especificado (case-insensitive).",
        "tags": ["Produtos"],
        "parameters": [
          {
            "name": "nome",
            "in": "path",
            "required": true,
            "description": "Nome ou parte do nome do produto.",
            "schema": {
              "type": "string"
            },
            "example": "smartphone"
          }
        ],
        "responses": {
          "200": {
            "description": "Produtos encontrados.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "2 produto(s) encontrado(s)"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Produto"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhum produto encontrado com esse nome.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/ServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Produto": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "ID único do produto.",
            "example": "64a7b8c9d1e2f3a4b5c6d7e8"
          },
          "nome": {
            "type": "string",
            "description": "Nome do produto.",
            "example": "Smartphone Samsung Galaxy S23"
          },
          "descricao": {
            "type": "string",
            "description": "Descrição do produto.",
            "example": "Smartphone com tela de 6.1 polegadas"
          },
          "cor": {
            "type": "string",
            "description": "Cor do produto.",
            "example": "Preto"
          },
          "peso": {
            "type": "number",
            "description": "Peso em gramas.",
            "example": 168
          },
          "tipo": {
            "type": "string",
            "description": "Tipo/categoria do produto.",
            "example": "Eletrônicos"
          },
          "preco": {
            "type": "number",
            "description": "Preço em reais.",
            "example": 2499.99
          },
          "dataCadastro": {
            "type": "string",
            "format": "date-time",
            "description": "Data do cadastro.",
            "example": "2024-01-15T10:30:00.000Z"
          },
          "precoFormatado": {
            "type": "string",
            "description": "Preço formatado para exibição (campo virtual).",
            "readOnly": true,
            "example": "R$ 2.499,99"
          }
        }
      },
      "ProdutoInput": {
        "type": "object",
        "required": ["nome", "descricao", "cor", "peso", "tipo", "preco"],
        "properties": {
          "nome": {
            "type": "string",
            "maxLength": 100,
            "example": "Smartwatch Samsung Galaxy Watch 6"
          },
          "descricao": {
            "type": "string",
            "maxLength": 500,
            "example": "Smartwatch com monitor de batimentos cardíacos e GPS"
          },
          "cor": {
            "type": "string",
            "maxLength": 50,
            "example": "Preto"
          },
          "peso": {
            "type": "number",
            "minimum": 0,
            "example": 50
          },
          "tipo": {
            "type": "string",
            "maxLength": 50,
            "example": "Wearables"
          },
          "preco": {
            "type": "number",
            "minimum": 0,
            "example": 899.99
          }
        }
      },
      "ProdutoUpdate": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "maxLength": 100
          },
          "descricao": {
            "type": "string",
            "maxLength": 500
          },
          "cor": {
            "type": "string",
            "maxLength": 50
          },
          "peso": {
            "type": "number",
            "minimum": 0
          },
          "tipo": {
            "type": "string",
            "maxLength": 50
          },
          "preco": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Operação realizada com sucesso"
          },
          "data": {
            "$ref": "#/components/schemas/Produto"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Descrição do erro"
          },
          "error": {
            "type": "string",
            "example": "Detalhes do erro"
          }
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Produto não encontrado.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "ValidationError": {
        "description": "Erro de validação de dados.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "Dados inválidos"
                },
                "errors": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "example": ["Nome é obrigatório", "Preço deve ser um valor positivo"]
                }
              }
            }
          }
        }
      },
      "ServerError": {
        "description": "Erro interno do servidor.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Produtos",
      "description": "Gerenciamento de produtos da loja"
    }
  ]
}